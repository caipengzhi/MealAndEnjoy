<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">

    <ImageView
        android:id="@+id/iv_evapic"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_grade"
        android:layout_marginTop="34dp"
        android:background="#C0C0C0" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_star4"
        android:layout_alignEnd="@+id/edt_input_evaluate"
        android:layout_marginBottom="39dp"
        android:text="上传图片" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_input_evaluate"
        android:layout_alignStart="@+id/edt_input_evaluate"
        android:text="打分:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_star2"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/tv_grade"
        android:src="@mipmap/eva1" />
    <ImageView
        android:id="@+id/iv_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/eva1"
        android:layout_toRightOf="@id/iv_star1"
        android:layout_below="@id/iv_evapic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/iv_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/eva1"
        android:layout_toRightOf="@id/iv_star2"
        android:layout_below="@id/iv_evapic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/iv_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/eva1"
        android:layout_toRightOf="@id/iv_star3"
        android:layout_below="@id/iv_evapic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/iv_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/eva1"
        android:layout_toRightOf="@id/iv_star4"
        android:layout_below="@id/iv_evapic"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/edt_input_evaluate"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/iv_star1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入您的评价" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_evapic"
        android:layout_below="@+id/edt_input_evaluate"
        android:layout_marginTop="33dp"
        android:text="提交"
        android:id="@+id/button" />

</RelativeLayout>
